                                   asp-route-id="@web.Id"
                                   onclick="return confirm('ยืนยันการลบข้อมูล @web.nameLink ใช่ไหม?')">
                                    ลบ
                                </a>
                            </td>
                            <td><a class="btn btn-info" href="@web.link"  target="_blank">เข้าสู่เว็ปไซต์</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-lg-center"> ไม่มีข้อมูลให้แสดง ณ ขณะนี้</p>
    }


</div>
